<h1>投稿一覧</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.title %></td>
    <td><%= picture.content %></td>
    <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
    <td><%= link_to "投稿を編集する", edit_picture_path(picture.id) %></td>
  </tr>
<% end %>
</table>
<%= link_to '新規投稿する', new_picture_path %>
